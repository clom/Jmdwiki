# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET    /                controllers.HomeController.index
# An example controller showing how to use dependency injection
GET    /count           controllers.CountController.count
# An example controller showing how to write asynchronous code
GET    /message         controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file    controllers.Assets.versioned(path="/public", file: Asset)

GET    /top             controllers.TopController.showTop


POST    /user/create     controllers.UserController.create

GET     /user/new/       controllers.UserController.new

DELETE  /user/id/destroy controllers.UserController.destroy

PUT     /user/id/update  controllers.UserController.update

GET     /user/id/edit    controllers.UserController.edit



GET     /login           controllers.LoginController.login

POST    /login           controllers.LoginController.login

POST    /logout          controllers.LooutController.loout



GET     /article/index      controllers.ArticleController.index

POST    /article/create     controllers.ArticleController.create

GET     /article/new/       controllers.ArticleController.new

GET     /article/id/show    controllers.ArticleController.show

DELETE  /article/id/destroy controllers.ArticleController.destroy

PUT     /article/id/update  controllers.ArticleController.update

GET     /article/id/edit    controllers.ArticleController.edit

