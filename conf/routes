# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET    /                controllers.HomeController.index
# An example controller showing how to use dependency injection
GET    /count           controllers.CountController.count
# An example controller showing how to write asynchronous code
GET    /message         controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file    controllers.Assets.versioned(path="/public", file: Asset)





POST    /user/create     controllers.UserController.create

GET     /user/new        controllers.UserController.new

DELETE  /user/:id        controllers.UserController.destroy(id:Int)

PUT     /user/:id        controllers.UserController.update(id:Int)

GET     /user/:id        controllers.UserController.edit(id:Int)



GET     /login           controllers.LoginController.login

POST    /login           controllers.LoginController.login

POST    /logout          controllers.LooutController.loout



GET     /article/index       controllers.ArticleController.index

POST    /article/create      controllers.ArticleController.create

GET     /article/new         controllers.ArticleController.new

GET     /article/:id         controllers.ArticleController.show(id:Int)

DELETE  /article/:id         controllers.ArticleController.destroy(id:Int)

PUT     /article/:id         controllers.ArticleController.update(id:Int)

GET     /article/:id         controllers.ArticleController.edit(id:Int)

